{
  "extends": [
    "bpmnlint:recommended",
    "plugin:process-engine/recommended"
  ],
  "rules": {
    "conditional-flows": "warn",
    "end-event-required": "off",
    "event-sub-process-typed-start-event": "off",
    "label-required": "warn",
    "no-complex-gateway": "warn",
    "no-disconnected": "warn",
    "no-gateway-join-fork": "off",
    "no-implicit-split": "error",
    "no-inclusive-gateway": "warn",
    "single-blank-start-event": "off",
    "single-event-definition": "warn",
    "start-event-required": "off",
    "sub-process-blank-start-event": "off"
  }
}
