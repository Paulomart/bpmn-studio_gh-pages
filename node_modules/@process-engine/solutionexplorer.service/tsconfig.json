{
  "typingOptions": {
    "enableAutoDiscovery": true
  },
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/commonjs",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "declaration": true,
    "skipLibCheck": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src"]
}
