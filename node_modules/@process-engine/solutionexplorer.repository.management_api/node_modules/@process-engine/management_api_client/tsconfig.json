{
  "typingOptions": {
    "enableAutoDiscovery": true
  },
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/commonjs",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "declaration": true,
    "skipLibCheck": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true
  },
  "include": ["src"]
}
